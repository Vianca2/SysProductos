@model List<Proveedor>
<h1>Lista de Proveedores</h1>
<div>
    <a asp-controller="Proveedor" asp-action="Create" class="btn btn-primary">Nuevo</a>
    <br />
    <br />
    @if (Model != null)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Nombre</td>
                    <td>NRC</td>
                    <td>Dirección</td>
                    <td>Telefono</td>
                    <td>Email</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var proveedor in Model)
                {
                    <tr>
                        <th>@proveedor.Nombre</th>
                        <th>@proveedor.NRC</th>
                        <th>@proveedor.Direccion</th>
                        <th>@proveedor.Telefono</th>
                        <th>@proveedor.Email</th>
                        <th>
                            <a class="btn btn-primary" asp-controller="Proveedor" asp-action="Edit" asp-route-id="@proveedor.Id">Editar</a> |
                            <a class="btn btn-danger" asp-controller="Proveedor" asp-action="Delete" asp-route-id="@proveedor.Id">Eliminar</a>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
    }
</div>
